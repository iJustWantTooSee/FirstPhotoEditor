                    android:layout_width="wrap_content"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/filter8"
                    app:layout_constraintStart_toEndOf="@+id/filter6"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/filter8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/filter9"
                    app:layout_constraintStart_toEndOf="@+id/filter7"
                    app:layout_constraintTop_toTopOf="parent" />
                <Button
                    android:id="@+id/filter9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/filter10"
                    app:layout_constraintStart_toEndOf="@+id/filter8"
                    app:layout_constraintTop_toTopOf="parent" />

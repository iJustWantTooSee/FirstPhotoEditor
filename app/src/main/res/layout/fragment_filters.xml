                    android:layout_width="wrap_content"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:text="Gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/filter4"

                    app:layout_constraintStart_toEndOf="@+id/filter2"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/filter4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:text="Sepia"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/filter5"
                    app:layout_constraintStart_toEndOf="@+id/filter3"
